<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=<<h1>>, initial-scale=1.0" />
    <title>Beaver Wood Carvers Products</title>
    <link rel="stylesheet" href="/css/app.css" />
  </head>

  <body>
    <h1>Beaver Wood Carvers Products</h1>
    <nav>
      <a href="/products/new">Add a New Product</a>
    </nav>
    <ul>
      <% products.forEach((product, index) => { %>

      <li>
        <a href="/product/<%=product.productId%>">
          <%=product.productDescription%>
        </a>
      </li>

      <img src="<%=product.img%>" alt="" />

      <form action="/product/<%=product.id%>?_method=DELETE" method="POST">
        <input type="submit" value="Delete" />
      </form>
      <!-- Add edit link here  -->
      <a class="edit" href="/product/<%=product.productId; %>/edit">Edit</a>

      <% }) %>
    </ul>
  </body>
</html>
